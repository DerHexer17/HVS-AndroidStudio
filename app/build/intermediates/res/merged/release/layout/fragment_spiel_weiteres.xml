<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/spielDetailLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".hvs.LigaActivity" >

    <TableLayout 
        android:id="@+id/tableWeiteres"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:shrinkColumns="0,1">
        <TableRow>
            <TextView 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/spielWeiteresHeimteamName"/>
            <TextView 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/spielWeiteresGastteamName"/>
        </TableRow>
        <TableRow>
            <TextView 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:text="@string/spielWeiteresHeimteamToreImSchnittTitel"
                android:id="@+id/spielWeiteresHeimteamToreImSchnittTitel"/>
            <TextView 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginTop="10dp"
                android:text="@string/spielWeiteresGastteamToreImSchnittTitel"
                android:id="@+id/spielWeiteresGastteamToreImSchnittTitel"/>
        </TableRow>
        <TableRow>
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
 
                android:id="@+id/spielWeiteresHeimteamToreImSchnitt"/>
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:id="@+id/spielWeiteresGastteamToreImSchnitt"/>
        </TableRow>
        <TableRow>
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:text="@string/spielWeiteresHeimteamSiegTitel"
                android:id="@+id/spielWeiteresHeimteamSiegTitel"/>
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:text="@string/spielWeiteresGastteamSiegTitel"
                android:id="@+id/spielWeiteresGastteamSiegTitel"/>
        </TableRow>
        <TableRow>
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"

                android:id="@+id/spielWeiteresHeimteamSieg"/>
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"

                android:id="@+id/spielWeiteresGastteamSieg"/>
        </TableRow>
        <TableRow>
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:text="@string/spielWeiteresHeimteamBilanzTitel"
                android:id="@+id/spielWeiteresHeimteamBilanzTitel"/>
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:text="@string/spielWeiteresGastteamBilanzTitel"
                android:id="@+id/spielWeiteresGastteamBilanzTitel"/>
        </TableRow>
        <TableRow>
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:id="@+id/spielWeiteresHeimteamBilanz"/>
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:id="@+id/spielWeiteresGastteamBilanz"/>
        </TableRow>
    </TableLayout>
       
</LinearLayout>
